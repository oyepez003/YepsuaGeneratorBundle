{{ '{% ui_dialog widgetVar="dlgNew'~ entity ~'" title="'~ entity ~' new" modal="true"
             close=js_function(\'$(this).dialog( "destroy" );$(this).remove();\') %}
  {% ajax_form id="frmNew'~ entity ~'"
       update="#'~ entity|lower ~'Workspace"
       action=path("'~ route_name_prefix ~'_create")
       method="POST"
       beforeSubmit=js_function("_dlgNew'~ entity ~' = dlgNew'~ entity ~';")
       complete=js_function("jqXHR","
         if(jqXHR.status == 202){
           _dlgNew'~ entity ~'.wijdialog(\'destroy\');
           $(_dlgNew'~ entity ~').remove();
         }
         if (jqXHR.status == 200){
           _dlgNew'~ entity ~'.wijdialog(\'destroy\');
           $(_dlgNew'~ entity ~').remove();
           $.pnotify(\''~ entity ~' has been created\');
           $(\'#'~ entity|lower ~'Grid\').trigger(\'reloadGrid\');
         }") 
  %}
    
    {% form_theme form \'YepsuaSmarTwigBundle:Form:table_layout.html.twig\' %}

    {{ form_widget(form) }}

    <br/><br/>
    <hr class="ui-widget-content">

    {% ui_button style="float:right" type="submit" value="Create"%}

  {% end_ajax_form %}

{% end_ui_dialog %}' }}